{
  "manifest_version": 3,
  "name": "GitHub 相似仓库推荐",
  "version": "1.0.0",
  "description": "在 GitHub 仓库页根据当前仓库推荐相似仓库。",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}